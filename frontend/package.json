{
  "name": "velura-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "node dev-server.js",
    "dev:vite": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "NODE_ENV=production node production-server.js",
    "prod": "npm run build && npm run start",
    "logs": "tail -f logs/frontend-errors-$(date +%Y-%m-%d).log",
    "logs:all": "tail -f logs/frontend-combined-$(date +%Y-%m-%d).log",
    "clean:logs": "find logs -name \"*.log\" -mtime +7 -delete",
    "clean:dist": "rm -rf dist",
    "check:backend": "node scripts/check-backend.js",
    "health": "curl -s http://localhost:5000/health | python3 -m json.tool",
    "monitor": "echo '=== Frontend Monitor ===' && tail -n 5 logs/frontend-errors-$(date +%Y-%m-%d).log 2>/dev/null || echo 'No error logs today'",
    "deploy": "npm run clean:dist && npm run build && npm run start",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs velura-frontend"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "ngrok": "^4.3.3",
    "node-fetch": "^3.3.2",
    "terser": "^5.44.1",
    "vite": "^7.1.7"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
